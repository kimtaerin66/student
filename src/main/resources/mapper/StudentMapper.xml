<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.java.student.mappers.StudentMapper">

  <!--    학생정보 조회-->
    <select id="_getStudentList"  resultType="com.java.student.domain.StudentDTO$Response">
        SELECT *
        FROM STUDENT
    </select>

    <!--    학생정보 수정-->
    <update id="_updateStudent" parameterType="com.java.student.domain.StudentDTO$Update">
        UPDATE TBL_GROUPS
        <set>
            <if test="grpName != null">
                GRP_NAME = #{grpName},
            </if>
            <if test="grpPlaceAddr!= null">
                GRP_PLACE_ADDR = #{grpPlaceAddr},
            </if>
            <if test="grpServiceFk!= null">
                GRP_SERVICE_FK = #{grpServiceFk},
            </if>
            <if test="grpPlaceControlAreaCode != null">
                GRP_PLACE_CONTROL_AREA_CODE = #{grpPlaceControlAreaCode},
            </if>
        </set>
        WHERE GRP_PK = ${grpPk}
    </update>

</mapper>